#!/usr/bin/env ruby

require 'addzone/master'
require 'fileutils'
require 'optparse'

begin
  mailserver = nil
  opt = OptionParser.new
  opt.on('-m MAIL_SERVER_ADDRESS') { |v| mailserver = v }
  opt.parse!(ARGV)

  if ARGV.size != 2 && ARGV.size != 1
    raise "USAGE: #{$0} example.com [192.168.100.100] \n"
  end

  add_master = AddZone::Master.new(AddZone::DEFAULT_ADDZONE_CONF_PATH)
  domain  = ARGV[0]
  add_master.ip_address = ARGV[1] if ARGV.size == 2
  add_master.mail_server_address = mailserver if mailserver

  puts "Domain   : #{domain}"
  puts "IP Address: #{add_master.ip_address}"
  puts "Mail Server Address: #{add_master.mail_server_address}"if mailserver

  add_master.add_zone(domain)
  add_master.named_checkconf
  add_master.rndc_reload

  add_master.slave_servers.each do |server|
    if server['ssh']
      cmd = "ssh #{server['ssh']} #{server['name']} addslave #{domain}"
      puts cmd
      puts `#{cmd}`
    end
  end

  sleep 1

  add_master.name_servers.each do |server|
    AddZone.check_dns(server['name'], domain)
  end

rescue => error
  puts "ERROR: " + error.to_s
end
